<?php

$weapons = ['fists', 'whip', 'gun'];
$opponentWeapon = $weapons[rand(0,2)]; // Cela permet de choisir une arme de manière aléatoire.

$indyWeapon = "";

switch ($opponentWeapon) {
  case 'fists':
    $indyWeapon = 'Indy prend son pistolet';
    break;
  case 'whip':
    $indyWeapon = 'Indy utilise ses poings';
    break;
  case 'gun':
    $indyWeapon = 'Indy prend son fouet';
    break;
}

echo "L'adversaire attaque Indy avec ".$opponentWeapon.PHP_EOL;
echo $indyWeapon.PHP_EOL;

?>
